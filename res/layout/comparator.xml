<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/window_bg">
	<TextView
		android:id="@+id/player_name_1"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		style="@style/text_name"
		/>
	<TextView
		android:id="@+id/player_name_2"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		style="@style/text_name"
		/>
	<TextView
		android:id="@+id/player_surname_1"
		android:layout_below="@id/player_name_1"
		style="@style/text_name"
		/>
	<TextView
		android:id="@+id/player_surname_2"
		android:layout_alignParentRight="true"
		android:layout_below="@id/player_name_2"
		style="@style/text_name"
		/>
	<ListView
		android:id="@+id/attr_list"
		android:layout_below="@id/player_surname_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>
</RelativeLayout>
